@model NewPasswordModel

<section class="choseus-section spad">
    <div class="container">
        <div class="form-body" style="background-color: black; padding: 40px; border-radius: 8px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);">
            <div class="row justify-content-center">
                <div class="form-holder" style="max-width: 600px; width: 100%;">
                    <div class="form-content text-center">
                        <div class="form-items" style="margin-bottom: 30px;">
                            <h3 class="register-heading" style="font-size: 24px; color: #f36100; margin-bottom: 10px;">Change your password</h3>
                            <p class="register-subheading" style="color: white; font-size: 16px; margin-bottom: 20px;">Fill in the data below.</p>

                            <form asp-action="ChangePassword" asp-controller="ForgotYourPassword" method="post" class="needs-validation" novalidate>
                                <div class="row justify-content-center">
                                    <div class="col-md-6 mb-3">
                                        <input asp-for="NewPassword" class="form-control" type="password" placeholder="New Password" required style="padding: 12px;" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row justify-content-center">
                                    <div class="col-md-6 mb-3">
                                        <input asp-for="ConfirmPassword" class="form-control" type="password" name="confirmPassword" placeholder="Confirm New Password" required style="padding: 12px;" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                @if (ViewBag.Errors != null)
                                {
                                    <div class="mt-3">
                                        <span class="text-danger">@ViewBag.Errors</span>
                                    </div>
                                }

                                @if (ViewBag.Success != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                        <strong>Success!</strong> @ViewBag.Success
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                }

                                <div style="margin-top: 10px;"></div>
                                <button type="submit" style="padding: 14px 28px; font-size: 16px; background-color: rgb(243, 97, 0); color: #fff; border: none; border-radius: 4px; cursor: pointer;">Change Password</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>